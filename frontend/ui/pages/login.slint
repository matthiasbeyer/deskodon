import { Page } from "../page.slint";
import { TextEdit, Button } from "std-widgets.slint";

export component LoginPage inherits Page {
    title: "Login";

    in-out property <bool> enabled;

    callback login(string);

    preferred-width: 100%;
    preferred-height: 100%;

    VerticalLayout {
        spacing: 5px;

        instance := TextEdit {
            font-size: 20px;
            text: "mastodon.social";
            read-only: false;
            width: 100%;
        }

        login := Button {
            text: "Login";

            clicked => {
                root.login(instance.text)
            }
        }
    }
}



